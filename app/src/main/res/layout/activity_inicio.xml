<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="412dp"
        android:layout_height="844dp"
        android:foreground="@drawable/pantalla_inicio" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="663dp"
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="403dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNuevoPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03B1FF"
                android:fontFamily="sans-serif-black"
                android:onClick="Pedido"
                android:text="Ingresar Nuevo Pedido"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="80dp"
                android:translationY="25dp" />

            <Button
                android:id="@+id/btnRevisarPedido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03B1FF"
                android:fontFamily="sans-serif-black"
                android:onClick="RevisarPedido"
                android:text="Revisar Pedidos"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="110dp"
                android:translationY="50dp" />

            <Button
                android:id="@+id/btnCatalogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03B1FF"
                android:fontFamily="sans-serif-black"
                android:onClick="Catalogo"
                android:text="Catalogo"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="140dp"
                android:translationY="75dp" />

            <Button
                android:id="@+id/btnLocalizacion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03B1FF"
                android:fontFamily="sans-serif-black"
                android:onClick="Localizacion"
                android:text="Localizacion"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="125dp"
                android:translationY="105dp" />

            <Button
                android:id="@+id/btnMapasUb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#03B1FF"
                android:fontFamily="sans-serif-black"
                android:onClick="MapasUb"
                android:text="Mapas"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="150dp"
                android:translationY="135dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:translationX="10dp"
            android:translationY="120dp">

            <Button
                android:id="@+id/btnNuevoCliente"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#001278"
                android:fontFamily="sans-serif-black"
                android:onClick="Cliente"
                android:text="Ingresar Nuevo Cliente"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnNuevoProducto"
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#001278"
                android:fontFamily="sans-serif-black"
                android:onClick="Producto"
                android:text="Ingresar Nuevo Producto"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="5dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="365dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="120dp">

            <Button
                android:id="@+id/btnSalir"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="#CB4335"
                android:fontFamily="sans-serif-black"
                android:onClick="Salir"
                android:text="SALIR"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="140dp" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:fontFamily="sans-serif-black"
        android:text="PANEL PRINCIPAL"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>