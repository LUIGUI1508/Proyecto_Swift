<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Localizacion">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pantalla_inicio"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="720dp"
            android:orientation="vertical"
            android:translationY="8dp">

            <ToggleButton
                android:id="@+id/btnActualizar"
                android:layout_width="wrap_content"
                android:layout_height="66dp"
                android:textOff="@string/iniciar_actualizaciones"
                android:textOn="@string/parar_actualizaciones"
                android:textSize="25sp"
                android:translationX="35sp" />


            <TextView
                android:id="@+id/lblLatitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/latitud"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/lblLongitud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/longitud"
                android:textSize="25sp" />


            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GUARDAR LOCALIZACION"
                android:translationX="100sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="472dp"
                android:orientation="horizontal">

                <ListView
                    android:id="@+id/lvLista2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:translationX="10sp" />

                <ListView
                    android:id="@+id/lvLista"
                    android:layout_width="207dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <Button
                android:id="@+id/btnInicio"
                android:layout_width="149dp"
                android:layout_height="60dp"
                android:backgroundTint="#CB4335"
                android:fontFamily="sans-serif-black"
                android:onClick="Inicio"
                android:text="INICIO"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:translationX="140dp"
                android:translationY="15sp" />
        </LinearLayout>
    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>